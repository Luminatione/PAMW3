@using P06Shop.Shared.Cars
@model Person  // Replace with your correct model namespace if different

@{
    ViewData["Title"] = "Delete Person";
}

<h2>Delete Person</h2>
<h3>Are you sure you want to delete this person?</h3>

<div>
    <h4>Person Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber) 
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <!-- Add other properties of the person that you wish to display -->
    </dl>

    @using (Html.BeginForm()) 
    {
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    }
</div>
